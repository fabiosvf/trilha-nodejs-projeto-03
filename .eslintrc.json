{
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "rules": {
    //"linebreak-style": ["error", "windows"],
    "linebreak-style": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": true
      }
    ]
  }
}